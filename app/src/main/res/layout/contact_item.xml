<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:id="@+id/contactItemLayout"
                                             android:background="#212121"
                                             android:layout_height="wrap_content">

    <TextView android:layout_width="50dp"
              android:layout_height="50dp"
              tools:src="@tools:sample/avatars"
              android:id="@+id/circularImageView"
              android:textColor="@android:color/white"
              android:textSize="40dp"
              android:gravity="center"
              android:layout_marginBottom="10dp" app:layout_constraintBottom_toBottomOf="parent"
              android:layout_marginTop="10dp" app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="10dp"/>

    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/contactName" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toEndOf="@+id/circularImageView"
            android:layout_marginStart="10dp"
            app:layout_constraintBottom_toBottomOf="@+id/circularImageView"
            android:textColor="#FFFFFF"
            android:textSize="18dp"
            app:layout_constraintHorizontal_bias="0.032" android:layout_marginTop="14dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.058"/>

    <TextView android:layout_width="wrap_content"
              android:textSize="14dp"
              android:text="7229801287"
              android:textColor="@android:color/white"
              android:layout_height="wrap_content" app:layout_constraintEnd_toEndOf="parent"
              android:layout_marginEnd="8dp"
              android:id="@+id/contactPhone"
              app:layout_constraintTop_toBottomOf="@+id/contactName"
              app:layout_constraintStart_toStartOf="@+id/contactName"
              app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="2dp"
              android:layout_marginBottom="12dp" app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>