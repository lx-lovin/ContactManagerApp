<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ScrollView android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@+id/imageView"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

            <ImageView android:layout_width="match_parent"
                       android:src="@drawable/profile"
                       android:scaleType="centerCrop"
                       android:layout_height="300dp" app:layout_constraintStart_toStartOf="parent"
                       app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
                       app:layout_constraintTop_toTopOf="parent" android:id="@+id/imageView"/>


            <android.support.v7.widget.CardView android:layout_width="match_parent"
                                                android:elevation="8dp"
                                                android:layout_margin="8dp"
                                                android:layout_height="70dp">

                <TextView android:layout_width="wrap_content"
                          android:text="Uday Bhardwaj"
                          android:textSize="22dp"
                          android:fontFamily="@font/caviar_dreams_bold"
                          android:id="@+id/name"
                          android:layout_marginLeft="30dp"
                          android:layout_gravity="start|center_vertical"
                          android:textColor="@android:color/black"
                          android:layout_height="wrap_content"/>
            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView android:layout_width="match_parent"
                                                android:elevation="8dp"
                                                android:layout_margin="8dp"
                                                android:layout_height="70dp">

                <ImageView android:layout_width="30dp"
                           android:src="@drawable/phoe"
                           android:layout_marginLeft="10dp"
                           android:layout_gravity="center_vertical"
                           android:layout_height="30dp"/>
                <TextView android:layout_width="wrap_content"
                          android:text="7229801287"
                          android:textSize="18dp"
                          android:fontFamily="@font/caviardreams"
                          android:id="@+id/phone"
                          android:layout_gravity="center"
                          android:textColor="@android:color/black"
                          android:layout_height="wrap_content"/>

                <ImageView android:layout_width="30dp"
                           android:src="@drawable/message"
                           android:layout_marginRight="10dp"
                           android:layout_marginLeft="10dp"
                           android:layout_gravity="end|center_vertical"
                           android:layout_height="30dp"/>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView android:layout_width="match_parent"
                                                android:elevation="8dp"
                                                android:layout_margin="8dp"
                                                android:layout_height="70dp">

                <ImageView android:layout_width="30dp"
                           android:src="@drawable/paytm"
                           android:layout_marginLeft="10dp"
                           android:layout_gravity="center_vertical"
                           android:layout_height="30dp"/>
                <TextView android:layout_width="220dp"
                          android:textSize="18dp"
                          android:id="@+id/paytm"
                          android:gravity="center"

                          android:fontFamily="@font/caviardreams"
                          android:layout_gravity="center"
                          android:textColor="@android:color/black"
                          android:layout_height="wrap_content"/>
            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView android:layout_width="match_parent"
                                                android:elevation="8dp"
                                                android:layout_margin="8dp"
                                                android:layout_height="70dp">

                <ImageView android:layout_width="30dp"
                           android:src="@drawable/whatsapp"
                           android:layout_marginLeft="10dp"
                           android:layout_gravity="center_vertical"
                           android:layout_height="30dp"/>
                <TextView android:layout_width="220dp"
                          android:textSize="18dp"
                          android:gravity="center"
                          android:id="@+id/whatsapp"

                          android:fontFamily="@font/caviardreams"
                          android:layout_gravity="center"
                          android:textColor="@android:color/black"
                          android:layout_height="wrap_content"/>
            </android.support.v7.widget.CardView>


        </LinearLayout>
    </ScrollView>


</android.support.constraint.ConstraintLayout>
